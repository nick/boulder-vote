{
  "author": "Nick Poulden",
  "name": "boulder-vote",
  "version": "0.2.0",
  "license": "MIT",
  "description": "https://bouldervote.com",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick/boulder-vote.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node -r babel-register index",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint .",
    "webpack-dev": "webpack-dev-server --devtool=cheap-module-source-map --port 8080"
  },
  "dependencies": {
    "algoliasearch": "^3.24.5",
    "apollo-client": "^2.0.1",
    "apollo-client-preset": "^1.0.1",
    "apollo-server-express": "^2.14.2",
    "babel-core": "^6.26.0",
    "babel-plugin-graphql-tag": "^1.3.0",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.5.0",
    "graphql-tools": "^2.7.2",
    "morgan": "^1.9.0",
    "react": "^16.0.0",
    "react-apollo": "^2.0.0",
    "react-dom": "^16.0.0",
    "serve-static": "^1.13.1",
    "webpack": "^3.8.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "transform-object-assign",
      "graphql-tag"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "eslint": "^4.10.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-react": "^7.4.0",
    "react-disqus-comments": "^1.1.1",
    "react-helmet": "^5.2.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "seedrandom": "^2.4.3",
    "shuffle-array": "^1.0.1",
    "webpack-dev-server": "^2.9.4"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "impliedStrict": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "react/prop-types": "off",
      "react/no-children-prop": "off"
    },
    "overrides": [
      {
        "files": "index.js",
        "rules": {
          "no-console": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "public"
  ]
}
